<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td class="action">
    <%= link_to 'Edit', edit_user_path(user), :class => 'btn primary' %>
    <%= link_to 'Del', user, :class => 'btn danger', :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path, :class => 'btn success' %>
