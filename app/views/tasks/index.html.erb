<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Story</th>
    <th>Description</th>
    <th>Is story</th>
    <th>User</th>
    <th>Status</th>
    <th>Estimate</th>
    <th>Actual</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.story_id %></td>
    <td><%=h task.description %></td>
    <td><%=h task.is_story %></td>
    <td><%=h task.user_id %></td>
    <td><%=h task.status %></td>
    <td><%=h task.estimate %></td>
    <td><%=h task.actual %></td>
    <td class="action">
    <%= link_to 'Edit', edit_task_path(task), :class => 'btn primary' %>
    <%= link_to 'Del', task, :class => 'btn danger', :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back', :back, :class => 'btn success' %>
