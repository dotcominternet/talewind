<h1>Editing story</h1>

<% form_for(@story) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :business_value %><br />
    <%= f.text_field :business_value %>
  </p>
  <p>
    <%= f.label :technical_value %><br />
    <%= f.text_field :technical_value %>
  </p>
  <p>
    <%= f.label :sprint_id %><br />
	<%= select_tag "story[sprint_id]", options_for_select(Sprint.all.collect{|x| [x.name, x.id]}) %>
  </p>
  <p>
    <%= f.label :category %><br />
	<%= select_tag "story[category]", options_for_select(["feature", "bug"], @story.category)%>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= select_tag "story[status]", options_for_select(["concept bin", "not started", "in progress", "complete"], @story.status) %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @story %> |
<%= link_to 'Back', stories_path %>