<h1>New story</h1>

<% form_for(@story) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :business_value %><br />
    <%= f.text_field :business_value %>
  </p>
  <p>
    <%= f.label :technical_value %><br />
    <%= f.text_field :technical_value %>
  </p>
  <p>
    <%= f.label :sprint_id %><br />
	<%= select_tag "story[sprint_id]", options_for_select(Sprint.all.collect{|x| [x.name, x.id]}) %>
  </p>
  <p>
    <%= f.label :category %><br />
	<%= select_tag "story[category]", options_for_select(["feature", "bug"], "feature")%>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= select_tag "story[status]", options_for_select(["concept bin", "not started", "in progress", "complete"], "concept bin") %>
  </p>

  <p>
	<%= f.label :estimate %><br />
	<%= text_field_tag :estimate, '', :size => 4 %> minutes
  </p>	
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', stories_path %>